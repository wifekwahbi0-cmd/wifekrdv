    <script>
        // ุงูุจูุงูุงุช ุงููุญููุธุฉ ูุญููุงู
        let appointments = JSON.parse(localStorage.getItem('appointments') || '[]');
        let patients = JSON.parse(localStorage.getItem('patients') || '[]');
        let reports = JSON.parse(localStorage.getItem('reports') || '[]');

        // ุชุณุฌูู ุงูุฏุฎูู
        function login() {
            const code = document.getElementById('loginCode').value;
            if (code === '1110') {
                document.getElementById('loginScreen').classList.add('hidden');
                document.getElementById('dashboard').classList.remove('hidden');
                showNotification('ูุฑุญุจุงู ุฃ. ููุงู ููุจู! ุชู ุชุณุฌูู ุงูุฏุฎูู ุจูุฌุงุญ');
                updateStorageStats();
                updateTodaySchedule();
                loadPatientOptions();
            } else {
                document.getElementById('loginError').classList.remove('hidden');
                setTimeout(() => {
                    document.getElementById('loginError').classList.add('hidden');
                }, 3000);
            }
        }

        // ุชุณุฌูู ุงูุฎุฑูุฌ
        function logout() {
            document.getElementById('loginScreen').classList.remove('hidden');
            document.getElementById('dashboard').classList.add('hidden');
            document.getElementById('loginCode').value = '';
        }

        // ุนุฑุถ ุงูุฅุดุนุงุฑุงุช
        function showNotification(message) {
            document.getElementById('notificationText').textContent = message;
            document.getElementById('notificationBar').classList.remove('hidden');
            setTimeout(() => {
                hideNotification();
            }, 5000);
        }

        function hideNotification() {
            document.getElementById('notificationBar').classList.add('hidden');
        }

        // ุงูุชููู ุจูู ุงูุฃูุณุงู
        function showSection(sectionName) {
            // ุฅุฎูุงุก ุฌููุน ุงูุฃูุณุงู
            document.querySelectorAll('.section').forEach(section => {
                section.classList.add('hidden');
            });
            
            // ุฅุฒุงูุฉ ุงูุชุญุฏูุฏ ูู ุฌููุน ุงูุฃุฒุฑุงุฑ
            document.querySelectorAll('.nav-btn').forEach(btn => {
                btn.classList.remove('bg-blue-100', 'text-blue-700');
            });
            
            // ุนุฑุถ ุงููุณู ุงููุญุฏุฏ
            document.getElementById(sectionName).classList.remove('hidden');
            document.getElementById(sectionName).classList.add('fade-in');
            
            // ุชุญุฏูุฏ ุงูุฒุฑ ุงููุดุท
            event.target.classList.add('bg-blue-100', 'text-blue-700');
        }

        // ุฅุถุงูุฉ ููุนุฏ ุฌุฏูุฏ
        function addAppointment() {
            const patientName = document.getElementById('patientName').value;
            const date = document.getElementById('appointmentDate').value;
            const time = document.getElementById('appointmentTime').value;
            const sessionType = document.getElementById('sessionType').value;

            if (patientName && date && time && sessionType) {
                const appointment = {
                    id: Date.now(),
                    patientName,
                    date,
                    time,
                    sessionType,
                    status: 'ูุฌุฏูู'
                };

                appointments.push(appointment);
                localStorage.setItem('appointments', JSON.stringify(appointments));
                
                // ูุณุญ ุงููููุฐุฌ
                document.getElementById('patientName').value = '';
                document.getElementById('appointmentDate').value = '';
                document.getElementById('appointmentTime').value = '';
                document.getElementById('sessionType').value = '';
                
                updateAppointmentsList();
                updateStorageStats();
                showNotification('ุชู ุฅุถุงูุฉ ุงูููุนุฏ ุจูุฌุงุญ');
            } else {
                showNotification('ูุฑุฌู ููุก ุฌููุน ุงูุญููู');
            }
        }

        // ุชุญุฏูุซ ูุงุฆูุฉ ุงูููุงุนูุฏ
        function updateAppointmentsList() {
            const list = document.getElementById('appointmentsList');
            list.innerHTML = '';

            appointments.sort((a, b) => new Date(a.date + ' ' + a.time) - new Date(b.date + ' ' + b.time));

            appointments.forEach(appointment => {
                const div = document.createElement('div');
                div.className = 'bg-white p-3 rounded border card-hover';
                div.innerHTML = `
                    <div class="flex justify-between items-center">
                        <div>
                            <div class="font-semibold">${appointment.patientName}</div>
                            <div class="text-sm text-gray-600">${appointment.date} - ${appointment.time}</div>
                            <div class="text-sm text-blue-600">${appointment.sessionType}</div>
                        </div>
                        <button onclick="deleteAppointment(${appointment.id})" class="text-red-500 hover:text-red-700">๐๏ธ</button>
                    </div>
                `;
                list.appendChild(div);
            });
        }

        // ุญุฐู ููุนุฏ
        function deleteAppointment(id) {
            appointments = appointments.filter(app => app.id !== id);
            localStorage.setItem('appointments', JSON.stringify(appointments));
            updateAppointmentsList();
            updateStorageStats();
            showNotification('ุชู ุญุฐู ุงูููุนุฏ');
        }

        // ุฅุถุงูุฉ ููู ุทูู ุฌุฏูุฏ
        function addPatient() {
            const childName = document.getElementById('childName').value;
            const childAge = document.getElementById('childAge').value;
            const parentName = document.getElementById('parentName').value;
            const parentPhone = document.getElementById('parentPhone').value;
            const childCondition = document.getElementById('childCondition').value;

            if (childName && childAge && parentName && parentPhone) {
                const patient = {
                    id: Date.now(),
                    childName,
                    childAge,
                    parentName,
                    parentPhone,
                    childCondition,
                    createdDate: new Date().toLocaleDateString('ar-SA')
                };

                patients.push(patient);
                localStorage.setItem('patients', JSON.stringify(patients));
                
                // ูุณุญ ุงููููุฐุฌ
                document.getElementById('childName').value = '';
                document.getElementById('childAge').value = '';
                document.getElementById('parentName').value = '';
                document.getElementById('parentPhone').value = '';
                document.getElementById('childCondition').value = '';
                
                updatePatientsList();
                updateStorageStats();
                loadPatientOptions();
                showNotification('ุชู ุฅุถุงูุฉ ููู ุงูุทูู ุจูุฌุงุญ');
            } else {
                showNotification('ูุฑุฌู ููุก ุงูุญููู ุงูุฃุณุงุณูุฉ');
            }
        }

        // ุชุญุฏูุซ ูุงุฆูุฉ ูููุงุช ุงูุฃุทูุงู
        function updatePatientsList() {
            const list = document.getElementById('patientsList');
            list.innerHTML = '';

            patients.forEach(patient => {
                const div = document.createElement('div');
                div.className = 'bg-white p-3 rounded border card-hover';
                div.innerHTML = `
                    <div class="flex justify-between items-center">
                        <div>
                            <div class="font-semibold">${patient.childName} (${patient.childAge} ุณูุฉ)</div>
                            <div class="text-sm text-gray-600">ููู ุงูุฃูุฑ: ${patient.parentName}</div>
                            <div class="text-sm text-gray-600">ุงููุงุชู: ${patient.parentPhone}</div>
                            <div class="text-sm text-green-600">ุชุงุฑูุฎ ุงูุฅูุดุงุก: ${patient.createdDate}</div>
                        </div>
                        <button onclick="deletePatient(${patient.id})" class="text-red-500 hover:text-red-700">๐๏ธ</button>
                    </div>
                `;
                list.appendChild(div);
            });
        }

        // ุญุฐู ููู ุทูู
        function deletePatient(id) {
            patients = patients.filter(patient => patient.id !== id);
            localStorage.setItem('patients', JSON.stringify(patients));
            updatePatientsList();
            updateStorageStats();
            loadPatientOptions();
            showNotification('ุชู ุญุฐู ููู ุงูุทูู');
        }

        // ุชุญููู ุฎูุงุฑุงุช ุงูุฃุทูุงู ูู ุงูุชูุงุฑูุฑ
        function loadPatientOptions() {
            const select = document.getElementById('reportPatient');
            select.innerHTML = '<option value="">ุงุฎุชุฑ ุงูุทูู</option>';
            
            patients.forEach(patient => {
                const option = document.createElement('option');
                option.value = patient.id;
                option.textContent = patient.childName;
                select.appendChild(option);
            });
        }

        // ุฅุถุงูุฉ ุชูุฑูุฑ ุฌุฏูุฏ
        function addReport() {
            const patientId = document.getElementById('reportPatient').value;
            const reportDate = document.getElementById('reportDate').value;
            const reportContent = document.getElementById('reportContent').value;
            const progressLevel = document.getElementById('progressLevel').value;

            if (patientId && reportDate && reportContent && progressLevel) {
                const patient = patients.find(p => p.id == patientId);
                const report = {
                    id: Date.now(),
                    patientId,
                    patientName: patient.childName,
                    reportDate,
                    reportContent,
                    progressLevel,
                    createdDate: new Date().toLocaleDateString('ar-SA')
                };

                reports.push(report);
                localStorage.setItem('reports', JSON.stringify(reports));
                
                // ูุณุญ ุงููููุฐุฌ
                document.getElementById('reportPatient').value = '';
                document.getElementById('reportDate').value = '';
                document.getElementById('reportContent').value = '';
                document.getElementById('progressLevel').value = '';
                
                updateReportsList();
                updateStorageStats();
                showNotification('ุชู ุฅุถุงูุฉ ุงูุชูุฑูุฑ ุจูุฌุงุญ');
            } else {
                showNotification('ูุฑุฌู ููุก ุฌููุน ุงูุญููู');
            }
        }

        // ุชุญุฏูุซ ูุงุฆูุฉ ุงูุชูุงุฑูุฑ
        function updateReportsList() {
            const list = document.getElementById('reportsList');
            list.innerHTML = '';

            reports.sort((a, b) => new Date(b.reportDate) - new Date(a.reportDate));

            reports.forEach(report => {
                const div = document.createElement('div');
                div.className = 'bg-white p-3 rounded border card-hover';
                div.innerHTML = `
                    <div class="flex justify-between items-center">
                        <div>
                            <div class="font-semibold">${report.patientName}</div>
                            <div class="text-sm text-gray-600">${report.reportDate}</div>
                            <div class="text-sm text-yellow-600">ุงูุชูุฏู: ${report.progressLevel}</div>
                            <div class="text-xs text-gray-500 mt-1">${report.reportContent.substring(0, 50)}...</div>
                        </div>
                        <button onclick="deleteReport(${report.id})" class="text-red-500 hover:text-red-700">๐๏ธ</button>
                    </div>
                `;
                list.appendChild(div);
            });
        }

        // ุญุฐู ุชูุฑูุฑ
        function deleteReport(id) {
            reports = reports.filter(report => report.id !== id);
            localStorage.setItem('reports', JSON.stringify(reports));
            updateReportsList();
            updateStorageStats();
            showNotification('ุชู ุญุฐู ุงูุชูุฑูุฑ');
        }

        // ุชุญุฏูุซ ุงูุจุฑูุงูุฌ ุงููููู
        function updateTodaySchedule() {
            const today = new Date().toISOString().split('T')[0];
            document.getElementById('todayDate').textContent = new Date().toLocaleDateString('ar-SA');
            
            const todayAppointments = appointments.filter(app => app.date === today);
            const scheduleDiv = document.getElementById('todaySchedule');
            
            if (todayAppointments.length === 0) {
                scheduleDiv.innerHTML = '<div class="text-gray-500 text-center py-4">ูุง ุชูุฌุฏ ููุงุนูุฏ ุงูููู</div>';
            } else {
                scheduleDiv.innerHTML = '';
                todayAppointments.sort((a, b) => a.time.localeCompare(b.time));
                
                todayAppointments.forEach(appointment => {
                    const div = document.createElement('div');
                    div.className = 'bg-white p-3 rounded border flex justify-between items-center';
                    div.innerHTML = `
                        <div>
                            <div class="font-semibold">${appointment.patientName}</div>
                            <div class="text-sm text-gray-600">${appointment.sessionType}</div>
                        </div>
                        <div class="text-lg font-bold text-purple-600">${appointment.time}</div>
                    `;
                    scheduleDiv.appendChild(div);
                });
            }
        }

        // ุชุญุฏูุซ ุฅุญุตุงุฆูุงุช ุงูุชุฎุฒูู
        function updateStorageStats() {
            document.getElementById('appointmentsCount').textContent = appointments.length;
            document.getElementById('patientsCount').textContent = patients.length;
            document.getElementById('reportsCount').textContent = reports.length;
        }

        // ุญูุธ ุฌููุน ุงูุจูุงูุงุช
        function saveAllData() {
            localStorage.setItem('appointments', JSON.stringify(appointments));
            localStorage.setItem('patients', JSON.stringify(patients));
            localStorage.setItem('reports', JSON.stringify(reports));
            showNotification('ุชู ุญูุธ ุฌููุน ุงูุจูุงูุงุช ุจูุฌุงุญ');
        }

        // ุชุตุฏูุฑ ุงูุจูุงูุงุช
        function exportData() {
            const data = {
                appointments,
                patients,
                reports,
                exportDate: new Date().toISOString()
            };
            
            const dataStr = JSON.stringify(data, null, 2);
            const dataBlob = new Blob([dataStr], {type: 'application/json'});
            const url = URL.createObjectURL(dataBlob);
            
            const link = document.createElement('a');
            link.href = url;
            link.download = `clinic_data_${new Date().toISOString().split('T')[0]}.json`;
            link.click();
            
            showNotification('ุชู ุชุตุฏูุฑ ุงูุจูุงูุงุช ุจูุฌุงุญ');
        }

        // ูุณุญ ุฌููุน ุงูุจูุงูุงุช
        function clearAllData() {
            if (confirm('ูู ุฃูุช ูุชุฃูุฏ ูู ูุณุญ ุฌููุน ุงูุจูุงูุงุชุ ูุฐุง ุงูุฅุฌุฑุงุก ูุง ูููู ุงูุชุฑุงุฌุน ุนูู.')) {
                localStorage.clear();
                appointments = [];
                patients = [];
                reports = [];
                
                updateAppointmentsList();
                updatePatientsList();
                updateReportsList();
                updateStorageStats();
                updateTodaySchedule();
                loadPatientOptions();
                
                showNotification('ุชู ูุณุญ ุฌููุน ุงูุจูุงูุงุช');
            }
        }

        // ุชุญููู ุงูุจูุงูุงุช ุนูุฏ ุจุฏุก ุงูุชุทุจูู
        document.addEventListener('DOMContentLoaded', function() {
            updateAppointmentsList();
            updatePatientsList();
            updateReportsList();
            updateStorageStats();
            updateTodaySchedule();
            loadPatientOptions();
            
            // ุชุนููู ุงูุชุงุฑูุฎ ุงูุญุงูู ูุงูุชุฑุงุถู
            document.getElementById('reportDate').value = new Date().toISOString().split('T')[0];
        });

        // ุงูุณูุงุญ ุจุงูุฏุฎูู ุจุงูุถุบุท ุนูู Enter
        document.getElementById('loginCode').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                login();
            }
        });
